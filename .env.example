# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/bap-workspace

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=BAP Workspace <noreply@bap.com>

# Application URL
APP_URL=http://localhost:3001

# WebRTC TURN Server (Optional - improves connectivity in restricted networks)
# Use a service like Twilio, Xirsys, or host your own coturn server
TURN_SERVER=turn:turn.example.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential
